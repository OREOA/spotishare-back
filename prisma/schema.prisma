datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id           String   @id
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         String   @db.VarChar(255)
  accessToken  String
  refreshToken String
  Song         Song[]
  Artist       Artist[]
}

model Song {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  songId    String
  name      String
  album     String
  albumImg  String
  votes     Int?
  artist    Artist   @relation(fields: [artistId], references: [id])
  artistId  Int
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId String
}

model Artist {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  artistId  String
  votes     Int?
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId String
  Song      Song[]
}
